<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciceAlphabetKatakanaActivity"
    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="70dp"
        android:id="@+id/ex_alpha_kata_text"
        android:text="KATAKANA"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/ex_alpha_kata_button1"
            android:textAllCaps="false"
            android:textSize="32dp"
            android:text="0"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/ex_alpha_kata_button2"
            android:textAllCaps="false"
            android:textSize="32dp"
            android:text="1"/>/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/ex_alpha_kata_button3"
            android:textAllCaps="false"
            android:textSize="32dp"
            android:text="2"/>/>

    </LinearLayout>

</LinearLayout>